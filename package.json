{
  "name": "mayphus.org",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "deploy": "npm run build && wrangler deploy",
    "dev:wrangler": "wrangler dev",
    "sync": "./scripts/sync-content.sh",
    "dev:sync": "npm run sync && npm run dev",
    "check": "astro check",
    "lint": "npx eslint src/",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "validate": "npm run check && npm run type-check && npm run lint && npm run test:run",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,astro}": [
      "eslint --fix"
    ],
    "*.ts": [
      "tsc --noEmit --skipLibCheck"
    ],
    "src/**/*.{ts,js}": [
      "vitest related --run"
    ]
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@fontsource/fira-code": "^5.2.6",
    "@fontsource/fraunces": "^5.2.7",
    "@fontsource/inter": "^5.2.6",
    "@shikijs/rehype": "^3.6.0",
    "astro": "^5.9.2",
    "rehype-autolink-headings": "^7.1.0",
    "rollup-plugin-orgx": "^2.0.0",
    "typescript": "^5.8.3",
    "unified": "^11.0.5",
    "uniorg-extract-keywords": "^1.1.0",
    "uniorg-parse": "^3.2.0",
    "uniorg-slug": "^1.1.0",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.3"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@eslint/js": "^9.29.0",
    "@types/hast": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^3.2.4",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^0.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "vite": "^6.0.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.19.1"
  }
}
