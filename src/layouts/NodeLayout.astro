---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import SiteHeader from '../components/SiteHeader.astro';
import Footer from '../components/Footer.astro';

type Props = CollectionEntry<'content'>['data'] & {
  children?: any;
};

const { title = 'Untitled', filetags, date } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description="mayphus tang's digital workshop" />
  </head>

  <body>
    <SiteHeader />
    <main id="main" class="org-content">
      <h1>{title}</h1>
      {filetags && filetags.length > 0 && (
        <div class="org-meta">
          #+filetags: {filetags.map(tag => `:${tag}:`).join('')}
        </div>
      )}
      {date && (
        <div class="org-meta">
          #+date: {date.toISOString().split('T')[0]}
        </div>
      )}
      <slot />
      <Footer />
    </main>
  </body>
</html>
