---
import { SITE_FOOTER_LINKS } from '../lib/site';

const links = SITE_FOOTER_LINKS;
const getRel = (external?: boolean) => external ? 'noopener noreferrer' : undefined;
---

<footer class="mt-16 text-sm">
  <nav class="flex gap-6">
    {links.map((link) => (
      <a
        href={link.href}
        target={link.external ? '_blank' : undefined}
        rel={getRel(link.external)}
      >
        {link.label}
      </a>
    ))}
  </nav>
</footer>
