---
import { SITE_FOOTER_LINKS } from '../lib/site';

const links = SITE_FOOTER_LINKS;
const getRel = (external?: boolean) => external ? 'noopener noreferrer' : undefined;
---

<footer>
  <nav>
    {links.map((link) => (
      <a
        href={link.href}
        target={link.external ? '_blank' : undefined}
        rel={getRel(link.external)}
      >
        {link.label}
      </a>
    ))}
  </nav>
</footer>

<style>
  footer {
    width: min(72ch, 100%);
    margin: 0 auto;
    padding: 3rem 1.5rem;
    margin-top: 4rem;
    border-top: 1px solid var(--color-border);
  }
  nav {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }
  a {
    color: var(--color-muted);
    font-size: 0.9em;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  a:hover {
    color: var(--color-text);
    text-decoration: underline;
  }
</style>
