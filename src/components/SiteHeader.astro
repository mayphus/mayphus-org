---
const currentPath = Astro.url.pathname;

const links = [
  { href: '/', label: 'Home' },
  { href: '/content/', label: 'Content' },
  { href: '/podcasts/', label: 'Podcasts' },
];

// Determine active link
const isActive = (href: string) => {
  if (href === '/' && currentPath === '/') return true;
  if (href !== '/' && currentPath.startsWith(href)) return true;
  return false;
};
---

<header class="paper-header">
  <div class="paper-header__inner">
    <div class="paper-header__brand">
      <a href="/" class="paper-header__brand-link">
        Mayphus Tang
      </a>
      <p class="paper-header__brand-subtitle">Digital workshop journal</p>
    </div>

    <nav aria-label="Primary navigation" class="paper-header__nav">
      {links.map((link) => (
        <a
          href={link.href}
          class={`paper-header__nav-link ${
            isActive(link.href) ? 'active' : ''
          }`}
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</header>

