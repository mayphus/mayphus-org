---
import { SITE_NAVIGATION } from '../lib/site';

const currentPath = Astro.url.pathname;

const links = SITE_NAVIGATION;

// Determine active link
const isActive = (href: string) => {
  if (href === '/' && currentPath === '/') return true;
  if (href !== '/' && currentPath.startsWith(href)) return true;
  return false;
};
---

<header class="mx-auto max-w-3xl px-4 py-6 lg:px-6">
  <nav aria-label="Primary navigation" class="flex flex-wrap gap-4 text-sm font-medium text-neutral-500 dark:text-neutral-400">
    {links.map((link) => {
      const active = isActive(link.href);
      return (
        <a
          href={link.href}
          class={`transition-colors hover:text-neutral-900 dark:hover:text-neutral-100 ${active ? 'text-neutral-900 dark:text-neutral-100 underline decoration-2 underline-offset-4' : ''}`}
        >
          {link.label}
        </a>
      );
    })}
  </nav>
</header>
